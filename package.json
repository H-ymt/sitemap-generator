{
  "name": "sitemap-generator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "cf:deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "cf:preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "workers:dev": "cd workers && pnpm dev",
    "workers:build": "cd workers && pnpm build",
    "workers:deploy": "cd workers && pnpm run deploy",
    "workers:test": "cd workers && pnpm test",
    "dev:full": "concurrently \"pnpm workers:dev\" \"pnpm dev\"",
    "dev:simple": "echo '⚠️  まずターミナル1でpnpm workers:devを実行し、その後ターミナル2でpnpm devを実行してください'",
    "workers:start": "cd workers && npx wrangler dev --port 8787",
    "deploy:all": "pnpm workers:deploy && pnpm cf:deploy",
    "build:all": "pnpm workers:build && pnpm build",
    "setup:deploy": "./scripts/setup-deploy.sh",
    "setup:preview": "./scripts/setup-preview.sh",
    "preview:full": "pnpm workers:deploy && pnpm cf:preview",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@opennextjs/cloudflare": "^1.3.1",
    "cheerio": "^1.1.0",
    "jotai": "^2.12.5",
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.53.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wrangler": "^4.22.0"
  }
}
